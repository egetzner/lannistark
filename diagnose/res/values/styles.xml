<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
        
    <style name="text">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">18sp</item>
    </style> 
    <style name="text.white">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text.black">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text.white.small">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.white.large">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="text.white.card">
        <item name="android:textSize">40sp</item>
    </style>
    
    <style name="text.black.small">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.black.large">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="text.black.card">
        <item name="android:textSize">40sp</item>
    </style>
    <style name="text.white.bold">
    	<item name="android:textStyle">bold</item>
    </style>
    <style name="text.black.bold">
    	<item name="android:textStyle">bold</item>
    </style>
    <style name="text.white.large.bold">
    	<item name="android:textStyle">bold</item>
    </style> 
    <style name="text.black.large.bold">
    	<item name="android:textStyle">bold</item>
    </style> 

</resources>