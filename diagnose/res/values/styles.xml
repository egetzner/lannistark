<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
        
    <style name="text">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">18sp</item>
    </style> 
    <style name="text.white">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="text.black">
        <item name="android:textColor">@color/black</item> 
    </style>
	<style name="text.grey">
        <item name="android:textColor">@color/grey</item>                
    </style>
    <style name="text.green">
        <item name="android:textColor">@color/green</item>                
    </style>
    <style name="text.yellow">
        <item name="android:textColor">@color/yellow</item>                
    </style>
    <style name="text.orange">
        <item name="android:textColor">@color/orange</item>                
    </style>
    <style name="text.red">
        <item name="android:textColor">@color/red</item>                
    </style>
    <style name="text.clickable">
        <item name="android:textColor">@drawable/text_color</item>                
    </style>
    <style name="text.white.small">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.white.large">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="text.white.card">
        <item name="android:textSize">40sp</item>
    </style>
    
    <style name="text.black.small">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text.black.large">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="text.black.card">
        <item name="android:textSize">40sp</item>
    </style>
    <style name="text.white.bold">
    	<item name="android:textStyle">bold</item>
    </style>
    <style name="text.black.bold">
    	<item name="android:textStyle">bold</item>
    </style>
    <style name="text.white.large.bold">
    	<item name="android:textStyle">bold</item>
    </style> 
    <style name="text.black.large.bold">
    	<item name="android:textStyle">bold</item>
    </style> 
        <style name="button" parent="@style/text.clickable">
        <item name="android:background">@drawable/button_custom</item>   
        <item name="android:layout_gravity">center_horizontal</item>     
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="button.big">
        <item name="android:textSize">26sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>     
    <style name="button.big.green">
		<item name="android:textColor">@color/green</item>    
    </style>   
    <style name="button.big.yellow">
		<item name="android:textColor">@color/yellow</item>    
    </style>   
    <style name="button.big.red">
		<item name="android:textColor">@color/red</item>    
    </style>   
    <style name="button.small">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>     
</resources>