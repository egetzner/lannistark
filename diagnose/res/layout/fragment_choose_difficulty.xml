<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_gravity="center_horizontal"
    android:background="@color/black"
    android:orientation="vertical">
    
    <TextView
        style="@style/text.white.large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Choose a difficulty:"        
        
        />
    
   	<Button
	   	style="@style/button.big.green"
        android:id="@+id/text_label_difficulty_easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="easy"
    />        
   
   	<Button
	   	style="@style/button.big.yellow"
        android:id="@+id/text_label_difficulty_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="medium"
    />   

   	<Button
	   	style="@style/button.big.red"
        android:id="@+id/text_label_difficulty_hard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="hard"
    />   
</LinearLayout>