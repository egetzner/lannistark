<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_gravity="center_horizontal"
    android:background="@color/black"
    android:orientation="vertical">
    
    <TextView
        style="@style/text.white.large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Choose a difficulty:"        
        
        />
    
   	<TextView
        android:id="@+id/text_label_difficulty_easy"
        style="@style/text.green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="easy"
    />        
   
  	<TextView
        android:id="@+id/text_label_difficulty_medium"
        style="@style/text.yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="medium"
    />   

  	<TextView
        android:id="@+id/text_label_difficulty_hard"
        style="@style/text.red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="hard"
    />   
</LinearLayout>