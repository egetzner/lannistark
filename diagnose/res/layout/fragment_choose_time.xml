<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@color/black"
    android:orientation="vertical">
    
    <!-- difficulty -->
    <RelativeLayout
        android:id="@+id/layout_difficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="20dp"
        >
	    <Button
	   	    style="@style/button.small"
	   	    android:id="@+id/text_label_difficulty"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:layout_alignParentLeft="true"
		    android:text="Difficulty"/>
	     <TextView
	   	    android:id="@+id/text_difficulty"
	   	    style="@style/text"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:layout_alignParentRight="true"
		    android:text="easy"/>       	    
    </RelativeLayout>
    
    <!-- Table row short -->
    <RelativeLayout
        android:id="@+id/layout_time_short"
        android:layout_margin="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
    	<Button
	   	    style="@style/button.small"
	        android:id="@+id/text_label_time_short"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:text="1 minute"
	    />      
       	<TextView
	        android:id="@+id/text_highscore_short"
	        style="@style/text.grey"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:text="0 "
	    />     
    </RelativeLayout>
    
    <!-- Table row normal -->
    <RelativeLayout
        android:id="@+id/layout_time_normal"
        android:layout_margin="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"> 
    	<Button
	   	    style="@style/button.small"
	        android:id="@+id/text_label_time_normal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:text="2 minutes"
	    />      
       	<TextView
	        style="@style/text.grey"
	        android:id="@+id/text_highscore_normal"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:text="0 "
	    />     
    </RelativeLayout>
    
    <!-- Table row lengthy -->
    <RelativeLayout
        android:id="@+id/layout_time_lengthy"
        android:layout_margin="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"> 
    	<Button
	   	    style="@style/button.small"
	        android:id="@+id/text_label_time_lengthy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:text="3 minutes"
	    />      
       	<TextView
	        android:id="@+id/text_highscore_lengthy"
	        style="@style/text.grey"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:text="0 "
	    />     
    </RelativeLayout>
    
    <!-- Table row long -->
    <RelativeLayout
        android:id="@+id/layout_time_long"
        android:layout_margin="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"> 
    	<Button
	   	    style="@style/button.small"
	        android:id="@+id/text_label_time_long"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:text="5 minutes"
	    />      
        <TextView
	        android:id="@+id/text_highscore_long"
	        style="@style/text.grey"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:text="0 "
	    />     
    </RelativeLayout>   
</LinearLayout>